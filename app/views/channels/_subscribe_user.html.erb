<%= form_for(@channel.active_subscriptions.
                 build(subscribed_id: follow.id) ) do |f| %>
  <div><%= hidden_field_tag :subscribed_id, follow.id %></div>
  <div><%= hidden_field_tag :subscriber_id, @channel.id %></div>
  <%= f.submit "Subscribe", class: "btn btn-primary btn-subscribe" %>
<% end %>
<% provide(:title, "Welcome") %>
<style>
  body {
    background-image: url(<%= asset_path 'background_world.jpg' %>);
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }
</style>
<div id="homePage">
  <div class="container">
    <div class="row">
      <div class="col-xs-offset-5 col-xs-7">
        <h1 class="home-header">lyve</h1>
      </div>
      <div class="home-display">
        <div class="col-xs-5">
            <div class="home-form">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

                <div class="form-group name-input">
                  <%= f.text_field :full_name,  placeholder: "Full name", class: 'form-control input-lg' %>
                </div>

                <div class="form-group name-input">
                  <%= f.text_field :username,  placeholder: "Username (can be changed at any time)", class: 'form-control input-lg' %>
                </div>

                <div class="form-group">
                  <%= f.text_field :email, placeholder: "Email", class: 'form-control input-lg' %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password,  placeholder: "Password (8 characters minimum)", class: 'form-control input-lg'  %>
                </div>

                <div class="form-group">
                  <%= f.submit "Sign Up", class: "btn btn-primary btn-block register-btn" %>
                </div>

            <% end %>
          </div>
        </div>
        <div class="col-xs-7">
          <div class="home-text">
            <h1>The first place to come anytime you check your phone or the internet</h1>
            <h3>Lyve is lightweight and organized way to stay up to date with information, news, and social in real-time.  With the world at your finger tips, know what's happening while it's happening.</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



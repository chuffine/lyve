<% provide(:title, "Register") %>

<div class="container">
  <div class="row">
    <%= devise_error_messages! %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-push-3 register-template">
      <h2 class="center">Join lyve and stay connected</h2><br />
      <h4>Registration is always free, quick, and easy.</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-group name-input">
          <%= f.text_field :full_name,  placeholder: "Full name", class: 'form-control input-lg' %>
        </div>

        <div class="form-group name-input">
          <%= f.text_field :username,  placeholder: "Username (can be changed at any time)", class: 'form-control input-lg' %>
        </div>

        <div class="form-group">
          <%= f.text_field :email, placeholder: "Email", class: 'form-control input-lg' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password,  placeholder: "Password", class: 'form-control input-lg'  %>
        </div>
        <div class="form-group">
          <%= f.submit "Sign Up", class: "btn btn-primary btn-block register-btn" %>
          <br />
          <%- if controller_name != 'sessions' %>
            <%= link_to "Alread a member? Log in here!", new_session_path(resource_name) %><br />
          <% end -%>
        </div>
      <% end %>
    </div>
  </div>
</div>
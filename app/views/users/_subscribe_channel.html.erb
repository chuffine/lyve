<%= form_for(chan.active_subscriptions.
                 build(subscribed_id: @user.id) ) do |f| %>
  <div><%= hidden_field_tag :subscribed_id, @user.id %></div>
  <div><%= hidden_field_tag :subscriber_id, chan.id %></div>
  <%= f.submit "Subscribe", class: "btn btn-primary btn-subscribe" %>
<% end %>
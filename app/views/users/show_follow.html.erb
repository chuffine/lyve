<% provide(:title, @title) %>
<div class="container">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= image_tag("http://www.gravatar.com/avatar", class: "gravatar") %>
        <h1><%= @user.full_name %></h1>
        <span><%= link_to "view my profile", @user %></span>
        <span><b>Microposts:</b> <%= @user.posts.count %></span>
      </section>
      <section class="stats">
        <% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user| %>
              <%= link_to image_tag("http://www.gravatar.com/avatar", size: "30", class: "gravatar"), user %>
            <% end %>
          </div>
        <% end %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= @title %></h3>
      <% if @users.any? %>
        <ul class="users">
          <%= render @users %>
        </ul>
        <%= will_paginate %>
      <% end %>
    </div>
  </div>
</div>
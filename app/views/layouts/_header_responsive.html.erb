<div class="navbar-outer">
<header class="navbar navbar-fixed-top navbar-inverse navbar-custom">

  <div class="container">
    <%= link_to "lyve", root_path, id: "logo" %>

    <% if user_signed_in? %>
      <div class="col-xs-6 search-bar">
        <form role="search">
          <div class="form-group">
            <div class="inner-addon left-addon">
              <i class="glyphicon glyphicon-search"></i>
            </div>
            <input type="text" placeholder="Search" class="form-control search-field">
          </div>
        </form>
      </div>


      <ul class="nav navbar-nav navbar-right user-nav">
        <!--<li class="header-mini-image"><#%= image_tag(current_user.avatar.url(:mini)) %></li>-->
        <li><%= link_to "Dashboard", root_path %></li>
        <li><%= link_to "My Posts",  current_user %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Account <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Settings", edit_user_registration_path %></li>
            <li class="divider"></li>
            <li>
              <%= link_to "Log out", destroy_user_session_path, method: "delete" %>
            </li>
          </ul>
      </ul>

    <% else %>
      <ul class="nav navbar-nav navbar-right">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                     html: { class: "navbar-form navbar-right form-inline input-group" }) do |f| %>

          <div class="form-group login-forms first-form">
            <!--%= f.label :email %><br />-->
            <%= f.text_field :email, class: "form-control", placeholder: "Email" %> <br />

            <!--<%= f.check_box :remember_me %>-->
            <!--<%= f.label :remember_me %>-->
            <%= f.hidden_field :remember_me, :as => :hidden, :value => true %>

          </div>

          <div class="form-group login-forms second-form">
            <!--<br /><%= f.label :password %><br />-->
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %> <br />

            <!--<%= link_to "Forgot your password?", new_password_path(resource_name), class: "pwd-link" %>-->
          </div>
          <div class="form-group header-btn">
            <%= f.submit "Log in", class:"btn btn-default form-control login-btn" %>
          </div>
          </ul>
        <% end %>

    <% end %>
  </div>

</header>
</div>